<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.PositionMapper">

    <resultMap id="positionMap" type="com.example.model.Position">
        <id property="id" column="id"/>
        <result property="code" column="name"/>
        <result property="code" column="name"/>
        <result property="name" column="name"/>
        <result property="description" column="department_id"/>
        <result property="description" column="description"/>
        <result property="level" column="level"/>
        <result column="create_by" jdbcType="VARCHAR" property="createBy"/>
        <result column="update_by" jdbcType="VARCHAR" property="updateBy"/>
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate"/>
        <result column="update_date" jdbcType="TIMESTAMP" property="updateDate"/>
    </resultMap>

    <select id="getAllPositions" resultMap="positionMap">
        SELECT * FROM positions
    </select>

    <select id="getPositionById" parameterType="long" resultMap="positionMap">
        SELECT * FROM positions WHERE id = #{id}
    </select>

    <insert id="createPosition" parameterType="com.example.model.Position">
        INSERT INTO positions (name, description) VALUES (#{name}, #{description})
    </insert>

    <update id="updatePosition" parameterType="com.example.model.Position">
        UPDATE positions SET name = #{name}, description = #{description} WHERE id = #{id}
    </update>

    <delete id="deletePosition" parameterType="long">
        DELETE FROM positions WHERE id = #{id}
    </delete>

</mapper>
